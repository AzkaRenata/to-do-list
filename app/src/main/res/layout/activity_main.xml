<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/task_add"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_add"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:text="Add" />

    <Button
        android:id="@+id/button_clear_all"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_add"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="221dp"
        android:text="Clear All" />

    <TextView
        android:id="@+id/task_title"
        android:paddingVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_clear_all"
        android:text="LIST TO DO"
        android:textAlignment="center"
        android:textSize="24sp"
        android:gravity="center_horizontal" />

    <ListView
        android:id="@+id/task_list"
        android:layout_below="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/custom_layout"/>

</RelativeLayout>